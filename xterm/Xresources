! Terminal Name for color Schemes
xterm*termName: xterm-256color

! Login Shell
xterm*LoginShell: true

! UTF-8
xterm*locale: true
xterm*utf8: 2

! Fix alt key
xterm*metaSendsEscape: true
xterm*eightBitInput: true

! Backspace
xterm*backarrowKey: false
xterm*ttyModes: erase ^?

! Scrolling
xterm*saveLines: 4096

! Enable Copy Paste with Ctrl+Shift+C and Ctrl+Shift+V
xterm*VT100.Translations: #override Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n Ctrl Shift <Key>C: copy-selection(CLIPBOARD)

! No Border
xterm*borderWidth: 0

! Fonts
xterm*faceName: DejaVu Sans Mono:size=11:antialias=true
